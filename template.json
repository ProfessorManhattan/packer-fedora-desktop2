{
  "variables": {
    "arch": "64",
    "box_basename": "fedora-33",
    "boot_wait": "5s",
    "build_directory": "builds",
    "cpus": "2",
    "disk_size": "65536",
    "guest_additions_url": "",
    "headless": "false",
    "http_directory": "http",
    "http_proxy": "{{ env `HTTPS_PROXY` }}",
    "https_proxy": "{{ env `HTTPS_PROXY` }}",
    "iso_checksum_url": "https://mirror.telepoint.bg/fedora/releases/33/Server/x86_64/iso/Fedora-Server-33-1.2-x86_64-CHECKSUM",
    "iso_name": "Fedora-Server-dvd-x86_64-33-1.2.iso",
    "ks_path": "kickstarter-f33.cfg",
    "memory": "1024",
    "mirror": "http://download.fedoraproject.org/pub/fedora/linux",
    "mirror_directory": "releases/33/Server/x86_64/iso",
    "name": "fedora-33",
    "no_proxy": "{{env `no_proxy`}}",
    "template": "fedora-33-x86_64"
  },
    "builders": [
      {
        "type": "virtualbox-iso",
        "boot_command": "<up><wait><tab> inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>",
        "boot_wait": "{{ user `boot_wait` }}",
        "cpus": "{{ user `cpus` }}",
        "disk_size": "{{user `disk_size`}}",
        "guest_additions_path": "VBoxGuestAdditions_{{ .Version }}.iso",
        "guest_additions_url": "{{ user `guest_additions_url` }}",
        "guest_os_type": "Fedora_64",
        "hard_drive_interface": "sata",
        "headless": "{{ user `headless` }}",
        "http_directory": "{{ user `http_directory` }}",
        "iso_checksum": "file:{{ user `iso_checksum_url` }}",
        "iso_url": "{{ user `mirror` }}/{{ user `mirror_directory` }}/{{ user `iso_name` }}",
        "memory": "{{ user `memory` }}",
        "output_directory": "{{ user `build_directory` }}/packer-{{ user `template` }}-virtualbox",
        "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
        "ssh_password": "vagrant",
        "ssh_port": 22,
        "ssh_timeout": "10000s",
        "ssh_username": "vagrant",
        "virtualbox_version_file": ".vbox_version",
        "vm_name": "{{ user `template` }}"
      }
    ],
    "post-processors": [
      {
        "output": "build/{{ user `box_basename` }}.{{ .Provider }}.box",
        "type": "vagrant"
      }
    ],
    "provisioners": [
      {
        "environment_vars": [
          "HOME_DIR=/home/vagrant",
          "http_proxy={{ user `http_proxy` }}",
          "https_proxy={{ user `https_proxy` }}",
          "no_proxy={{ user `no_proxy` }}"
        ],
        "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
        "expect_disconnect": true,
        "scripts": [
          "scripts/fix-slow-dns.sh", 
          "scripts/build-tools.sh", 
          "scripts/install-supporting-packages.sh", 
          "scripts/sshd.sh", 
          "scripts/virtualbox.sh", 
          "scripts/vagrant.sh",
          "scripts/real-tmp.sh",
          "scripts/gnome-desktop.sh",
          "scripts/cleanup.sh" 
        ],
        "type": "shell"
      }
    ]
  }
